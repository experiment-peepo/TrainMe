<Window x:Class="TrainMe.Windows.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrainMe.Windows"
        xmlns:vm="clr-namespace:TrainMe.ViewModels"
        mc:Ignorable="d"
        Title="Settings" SizeToContent="Height" Width="480"
        ResizeMode="NoResize"
        WindowStyle="None"
        WindowStartupLocation="CenterOwner"
        AllowsTransparency="True" Background="Transparent"
        Icon="pack://application:,,,/Images/icon.ico"
        ShowInTaskbar="False">
    <StackPanel Background="#FF301B32">
        <Grid Height="50" FlowDirection="RightToLeft" Background="#FF2D0A30" MouseLeftButtonDown="Grid_MouseLeftButtonDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Style="{StaticResource ControlButton}" Click="CloseButton_Click" ToolTip="Close settings">x</Button>
            <Label Grid.Column="1" Style="{StaticResource LowerTitle}" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center">Settings</Label>
        </Grid>
        
        <StackPanel Margin="20">
            <Label Style="{StaticResource LowerTitle}" FontSize="18" Margin="0,5,0,15" FontWeight="Bold">General Settings</Label>
            
            <!-- Default Opacity -->
            <StackPanel Margin="0,0,0,15">
                <Grid Margin="0,0,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Foreground="White" VerticalAlignment="Center" FontWeight="SemiBold">Default Opacity</Label>
                    <TextBlock Grid.Column="1" Text="{Binding DefaultOpacity, StringFormat='{}{0:P0}'}" 
                              Foreground="#FFAAAAAA" FontSize="12" VerticalAlignment="Center" FontWeight="SemiBold" MinWidth="40" TextAlignment="Right"/>
                </Grid>
                <Slider x:Name="DefaultOpacitySlider" 
                        Value="{Binding DefaultOpacity}"
                        Minimum="0" Maximum="0.95" 
                        IsSnapToTickEnabled="True" 
                        SmallChange="0.01" 
                        LargeChange="0.1" 
                        TickFrequency="0.01"
                        Style="{StaticResource NeonSliderStyle}"
                        ToolTip="Default opacity for newly added videos (0% = transparent, 95% = nearly opaque)"/>
                <TextBlock Text="Opacity level for videos when first added to playlist" 
                          Foreground="#88FFFFFF" FontSize="9" Margin="0,3,0,0" FontStyle="Italic"/>
            </StackPanel>
            
            <!-- Default Volume -->
            <StackPanel Margin="0,0,0,15">
                <Grid Margin="0,0,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Foreground="White" VerticalAlignment="Center" FontWeight="SemiBold">Default Volume</Label>
                    <TextBlock Grid.Column="1" Text="{Binding DefaultVolume, StringFormat='{}{0:P0}'}" 
                              Foreground="#FFAAAAAA" FontSize="12" VerticalAlignment="Center" FontWeight="SemiBold" MinWidth="40" TextAlignment="Right"/>
                </Grid>
                <Slider x:Name="DefaultVolumeSlider" 
                        Value="{Binding DefaultVolume}"
                        Minimum="0" Maximum="1" 
                        IsSnapToTickEnabled="True" 
                        SmallChange="0.01" 
                        LargeChange="0.1" 
                        TickFrequency="0.01"
                        Style="{StaticResource NeonSliderStyle}"
                        ToolTip="Default volume for newly added videos (0% = mute, 100% = full volume)"/>
                <TextBlock Text="Volume level for videos when first added to playlist" 
                          Foreground="#88FFFFFF" FontSize="9" Margin="0,3,0,0" FontStyle="Italic"/>
            </StackPanel>
            
            <!-- Separator -->
            <Border Background="#33FFFFFF" Height="1" Margin="0,5,0,15"/>
            
            <!-- Auto Load Session -->
            <Grid Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <Label Foreground="White" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,0,2">Auto Load Session</Label>
                    <TextBlock Text="Automatically restore your last playlist when starting the application" 
                              Foreground="#88FFFFFF" FontSize="9" FontStyle="Italic"/>
                </StackPanel>
                <CheckBox x:Name="AutoLoadSessionCheckBox" Grid.Column="1" 
                          IsChecked="{Binding AutoLoadSession}"
                          VerticalAlignment="Center"
                          Style="{StaticResource SettingsCheckBoxStyle}"
                          ToolTip="When enabled, your last playlist will be automatically loaded on startup"/>
            </Grid>
            
            <!-- Prevent Overlay Minimize -->
            <Grid Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <Label Foreground="White" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,0,2">Prevent Overlay Minimize</Label>
                    <TextBlock Text="Prevent video overlay windows from being minimized accidentally" 
                              Foreground="#88FFFFFF" FontSize="9" FontStyle="Italic"/>
                </StackPanel>
                <CheckBox x:Name="PreventOverlayMinimizeCheckBox" Grid.Column="1" 
                          IsChecked="{Binding PreventOverlayMinimize}"
                          VerticalAlignment="Center"
                          Style="{StaticResource SettingsCheckBoxStyle}"
                          ToolTip="When enabled, video overlay windows cannot be minimized"/>
            </Grid>
            
            <!-- Separator -->
            <Border Background="#33FFFFFF" Height="1" Margin="0,10,0,15"/>
            
            <!-- OK/Cancel Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
                <Button x:Name="CancelButton" Command="{Binding CancelCommand}" 
                        Margin="5,0" 
                        Foreground="#FFAAAAAA" 
                        Background="Transparent" 
                        FontSize="12"
                        Padding="20,8"
                        BorderThickness="1"
                        BorderBrush="#55FFFFFF"
                        Cursor="Hand"
                        ToolTip="Discard changes and close settings">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Cursor" Value="Hand"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#33FFFFFF"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    Cancel
                </Button>
                <Button x:Name="OkButton" Command="{Binding OkCommand}" 
                        Margin="5,0" 
                        Foreground="White" 
                        Background="DeepPink" 
                        FontSize="12"
                        Padding="20,8"
                        BorderThickness="0"
                        Cursor="Hand"
                        ToolTip="Save settings and close">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Cursor" Value="Hand"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF20B2AA"/>
                                    <Setter Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect Color="#FF1493" BlurRadius="10" ShadowDepth="0" Opacity="0.8"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#FF008B8B"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    Save
                </Button>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</Window>
