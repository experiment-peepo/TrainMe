<Window x:Class="TrainMeX.Windows.InputDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrainMeX.Windows"
        mc:Ignorable="d"
        Title="{Binding DialogTitle}" Width="520" Height="260"
        ResizeMode="NoResize"
        WindowStyle="None"
        WindowStartupLocation="CenterOwner"
        AllowsTransparency="True" Background="Transparent"
        Icon="pack://application:,,,/Images/icon.ico"
        ShowInTaskbar="False">
    <Border x:Name="MainBorder" 
            Background="{StaticResource BackgroundPrimary}" 
            BorderBrush="{StaticResource AccentPrimary}" 
            BorderThickness="1"
            CornerRadius="8">
        <Grid Background="{StaticResource BackgroundPrimary}">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header with gradient and rounded corners -->
            <Border x:Name="HeaderBorder" CornerRadius="8,8,0,0" 
                    Height="50"
                    Grid.Row="0">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#4D2F3F" Offset="0"/>
                        <GradientStop Color="#3D1F2E" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Grid FlowDirection="RightToLeft" MouseLeftButtonDown="Grid_MouseLeftButtonDown">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Button Style="{StaticResource ControlButton}" Click="CancelButton_Click" ToolTip="Cancel">x</Button>
                    <Label Grid.Column="1" Style="{StaticResource LowerTitle}" 
                           HorizontalAlignment="Left" 
                           Margin="10,0,0,0" 
                           VerticalAlignment="Center"
                           Content="{Binding DialogTitle}"/>
                </Grid>
            </Border>
            
            <!-- Content Area -->
            <StackPanel Margin="20" Grid.Row="1">
                <Label Content="{Binding LabelText}" 
                       Foreground="{StaticResource TextPrimary}" 
                       FontWeight="SemiBold" 
                       FontSize="13"
                       Margin="0,0,0,12"/>
                <Border Background="#FF8D7F8D"
                        BorderBrush="{StaticResource BorderPink}"
                        BorderThickness="4"
                        CornerRadius="6"
                        Padding="4"
                        Margin="0,0,0,0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Top">
                    <Border.Effect>
                        <DropShadowEffect Color="#FF69B4" BlurRadius="20" ShadowDepth="0" Opacity="1.0"/>
                    </Border.Effect>
                    <TextBox x:Name="InputTextBox"
                             Text="{Binding InputText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Foreground="#FF000000"
                             Background="#FFFFFFFF"
                             BorderBrush="Transparent"
                             BorderThickness="0"
                             Padding="15,15"
                             FontSize="15"
                             FontWeight="Normal"
                             Height="55"
                             HorizontalAlignment="Stretch"
                             VerticalContentAlignment="Center"
                             CaretBrush="#FF000000"
                             SelectionBrush="#FF69B4"
                             SelectionOpacity="0.3"
                             KeyDown="InputTextBox_KeyDown"/>
                </Border>
            </StackPanel>
            
            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" 
                       HorizontalAlignment="Right" 
                       Margin="20,0,20,20" 
                       Grid.Row="2">
                <Button x:Name="CancelButton" 
                        Click="CancelButton_Click"
                        Margin="5,0" 
                        Style="{StaticResource SecondaryButtonStyle}"
                        FontSize="12"
                        Padding="20,8"
                        ToolTip="Cancel">
                    Cancel
                </Button>
                <Button x:Name="OkButton" 
                        Click="OkButton_Click"
                        Margin="5,0" 
                        Style="{StaticResource PrimaryButtonStyle}"
                        FontSize="12"
                        Padding="20,8"
                        ToolTip="OK">
                    OK
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>

